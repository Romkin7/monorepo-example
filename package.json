{
    "name": "monorepo-example",
    "version": "1.0.0",
    "description": "Example yarn workspace",
    "main": "backend/server.js",
    "repository": "git@github.com:Romkin7/yelpCamp-mern.git",
    "author": "Roman Tuomisto",
    "workspaces": [
        "packages/*"
      ],
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=12.*",
        "yarn": ">=1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint",
            "pre-push": "yarn lint"
        }
    },
    "lint-staged": {
        "*.{tsx,ts,js,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "proseWrap": "always"
    },
    "scripts": {
        "start:test-app": "cd packages/test-app && yarn start",
        "start:component-library": "cd packages/component-library && yarn start",
        "start": "concurrently \"yarn start:test-app\" \"yarn start:component-library\""
    }
}
